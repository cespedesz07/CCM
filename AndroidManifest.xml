<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ccm"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <!-- Permisos de la aplicaciÃ³n -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!--
         Datos de la aplicacion como el icono y la clase
         CCMApplication para inicializar APIs y Libreria de PARSE
    -->
    <application
        android:name=".application.CCMApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_app_100x80"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!--
             METADATOS ESENCIALES PARA RECONOCER EL BOTON DE FACEBOOK
             EN EL LAYOUT DE LoginActivity.java
        -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Actividades -->
        <!--
             IMPORTANTE:
             Registro del AreaListActivity que corresponde a la lista de areas de la izquierda del dispositivo.
             Es importante agregar como action el intent MENUITEMLISTACTIVITY
             y category un intent DEFAULT, con el fin de desplegar el patron master/detail
             (AreaListActivity y AreaDetailActivity) luego de iniciar sesion desde LoginActivity o
             LoginEmailActivity
        -->
        <activity
            android:name=".eventos.AreaListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MENUITEMLISTACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".splash.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginEmailActivity" >
        </activity>

        <!--
             MUY IMPORTANTE:
        	 SE REGISTRA LA FacebookActivity PARA PODER DESPLEGAR EL DIALOGO DE INICIO DE SESION EN
        	 FACEBOOK CUANDO SE PRESIONA EL LoginButton (Ver LoginActivity.java)
        -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.example.ccm.registro.RegistroActivity"
            android:label="@string/title_activity_registro" >
        </activity>
    </application>

</manifest>
