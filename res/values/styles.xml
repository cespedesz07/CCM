<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estilo Base de La APP: con ActionBar Negra
    parent="android:Theme.Holo.Light.DarkActionBar" -->
    <style name="AppBaseTheme" ></style>

    <!-- Estilo que hereda el parent del estilo Base (ActionBar Negra).
         Agrega una flecha blanca en el actionbar  -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- 
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
         -->
    </style>

    
    <!-- Estilo de fondo Gris para los EditText
         Este estilo captura como background un fondo gris
         localizado en res/drawable
         @dimen/registro_activity_edittext_padding_top
    -->    
    
    <style name="editext_graybg" parent="android:Widget.EditText">
        <item name="android:background">@drawable/editext_bg_gray</item>
        <item name="android:ems">10</item>      
        <item name="android:textSize">@dimen/registro_activity_edittext_text_size</item>
    </style>
    
    
     <!-- Estilo para el Spinner de seleccion de tipo de documento -->
    <style name="spinner" parent="android:Widget.Spinner">
    </style>   
    

    <!-- Estilo de los Botones Rojos -->
    <style name="btn_red_large">
        <item name="android:background">@drawable/btn_rojo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt_18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
    </style>
    
    
    
    <!-- Estilo de los botones del Menu de Inicio -->
    <style name="btn_eventos">
       <item name="android:background">@drawable/events_icon_black</item>
       <item name="android:textSize">@dimen/txt_12sp</item>
       <item name="android:textStyle">bold</item>
    </style>
    
    <style name="btn_mapa">
     	<item name="android:background">@drawable/map_icon</item>
        <item name="android:textSize">@dimen/txt_12sp</item>
        <item name="android:textStyle">bold</item>   
    </style>
    
    <style name="btn_codigo_qr">
     	<item name="android:background">@drawable/qrcode_icon</item>
        <item name="android:textSize">@dimen/txt_12sp</item>
        <item name="android:textStyle">bold</item>   
    </style>

    
    

</resources>
