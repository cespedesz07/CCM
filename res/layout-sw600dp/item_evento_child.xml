<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewDescripcionEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBoxEvento"
        android:layout_alignBottom="@+id/checkBoxEvento"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp"
        android:text="TextView" />

    <CheckBox
        android:id="@+id/checkBoxEvento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="14dp"
        android:text="CheckBox" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewDescripcionEvento"
        android:layout_below="@+id/checkBoxEvento"
        android:layout_toLeftOf="@+id/checkBoxEvento"
        android:maxHeight="30dp"
        android:maxWidth="50dp"
        android:progress="30" />

</RelativeLayout>
